{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "target": "cookies",
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
     }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
